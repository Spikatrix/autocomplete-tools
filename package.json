{
  "version": "0.0.0",
  "name": "boilerplate-js",
  "description": "The default Fig repo for new JS projects",
  "author": "The Fig Team",
  "scripts": {
    "dev": "vite",
    "build:dry": "tsc --noEmit",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "sass": "^1.35.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2",
    "vite": "^2.3.8"
  },
  "fig": {
    "dev": {
      "description": "Start the development server",
      "icon": "🚀",
      "priority": 100
    },
    "build:dry": {
      "description": "Typecheck the project",
      "icon": "✅"
    },
    "build": {
      "description": "Typecheck and build the project",
      "icon": "🛠"
    },
    "serve": {
      "description": "Start the production build locally",
      "icon": "🖥️"
    },
    "test": {
      "description": "Run all tests",
      "icon": "🧪"
    },
    "lint": {
      "description": "Lint the code and find errors",
      "icon": "🔍"
    },
    "lint:fix": {
      "description": "Lint the code and fix errors",
      "icon": "🧰"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx}": "eslint --cache --fix",
    "*.{scss,md}": "prettier --write"
  }
}
