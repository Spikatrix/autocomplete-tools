{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "allowJs": false,
    "declaration": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build/",
  },
  "include": ["index.ts", "scripts/*.ts"],
}
